<%
var availableNavLinks = [
  {
    route: '/',
    title: sails.__('overview')
  },
];
%>

<style>
  .navbar .navbar-collapse.collapse.in {
    display: block !important;
  }
</style>
<nav class="navbar navbar-inverse home-nav navbar-fixed-top" style="border-radius: 0">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand mr-0" href="/"><img class="logo" alt="NEW_APP_NAME logo" src="/images/logo.png"/></a>
    </div>
    <div class="collapse navbar-collapse" id="navigation-bar">
      <ul class="nav navbar-nav">
        <% for (let route of availableNavLinks) { %>
          <li class="<%= route.route == req.path ? 'active' : '' %>">
            <a href="<%= route.route %>"><%= route.title %></a>
          </li>
        <% } %>
      </ul>
      <ul class="nav navbar-nav navbar-right navbar-nav--inverse">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= req.currentLanguage.title %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% for (let lang of req.availableLanguages) { %>
              <li>
                <a href="<%= req.path %>?hl=<%= lang.code %>"><%= lang.title %></a>
              </li>
            <% } %>
          </ul>
          <input type="hidden" id="current_language_code" value="<%= req.currentLanguage.code %>">
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= sails.__('Account Settings') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/account"><%= sails.__('Account Settings') %></a></li>
            <li><a href="/logout"><%= sails.__('Sign out') %></a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
